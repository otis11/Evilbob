{
	"manifest_version": 3,
	"name": "Bob",
	"description": "Hi! This is Bob, a command palette for your browser.",
	"version": "0.1.2",
	"icons": {
		"16": "icons/bob-icon-16x16.png",
		"32": "icons/bob-icon-32x32.png",
		"48": "icons/bob-icon-48x48.png",
		"128": "icons/bob-icon-128x128.png"
	},
	"background": {
		"service_worker": "background.js"
	},
	"options_page": "src/views/options/index.html",
	"action": {
		"default_icon": {
			"16": "icons/bob-icon-16x16.png",
			"32": "icons/bob-icon-32x32.png",
			"48": "icons/bob-icon-48x48.png",
			"128": "icons/bob-icon-128x128.png"
		}
	},
	"commands": {
		"bob.open": {
			"suggested_key": {
				"default": "Ctrl+Shift+L"
			},
			"description": "Open bob",
			"global": true
		}
	},
	"permissions": ["storage"],
	"optional_permissions": [
		"bookmarks",
		"system.cpu",
		"system.memory",
		"system.storage",
		"history",
		"tabs",
		"scripting",
		"management",
		"sessions",
		"contentSettings",
		"topSites",
		"commands",
		"downloads",
		"tabGroups"
	],
	"optional_host_permissions": ["https://*/*"]
}
